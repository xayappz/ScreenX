<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScreenX" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorPrimaryVariant">@color/sky_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sky_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/myfonts</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>


    <style name="CardViewStyle" parent="CardView.Light">
        <item name="cardCornerRadius">@dimen/_4sdp</item>
        <item name="cardElevation">@dimen/_12sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="cardUseCompatPadding">false</item>

    </style>

    <style name="CardViewStyleItem" parent="CardView.Light">
        <item name="cardCornerRadius">@dimen/_4sdp</item>
        <item name="cardElevation">@dimen/_14sdp</item>

    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/_8sdp</item>

    </style>

    <style name="TextViewStyleItem" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/_6sdp</item>


    </style>

    <style name="Heading" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="Heading2" parent="Heading">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/_12sdp</item>

    </style>

    <style name="Heading3" parent="Heading2">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/_2sdp</item>

    </style>

    <style name="HeadingItem" parent="Heading2">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">0dp</item>


    </style>

    <style name="SellingP" parent="Heading2">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>


    </style>

    <style name="RetailP" parent="Heading2">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>

    </style>


    <style name="Title_Heading1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/_12sdp</item>

    </style>

    <style name="Title_Heading2" parent="Title_Heading1">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>


    </style>

    <style name="Category_Item" parent="Title_Heading1">
        <item name="android:textSize">20sp</item>

    </style>

    <style name="MyButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:backgroundTint">@color/sky_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/add_review</item>


    </style>

    <style name="CustomTabStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomTabStyle.Selected">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>


</resources>