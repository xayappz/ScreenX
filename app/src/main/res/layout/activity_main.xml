                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintTop_toBottomOf="@+id/brandname" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/sellingprice"

